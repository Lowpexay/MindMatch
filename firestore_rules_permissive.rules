rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REGRAS TEMPORÁRIAS PERMISSIVAS PARA DEBUG
    // Use apenas durante desenvolvimento/teste
    
    // Permite ler/escrever em qualquer documento para usuários autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Permite criar coleção de teste sem autenticação (para debug)
    match /test/{document} {
      allow read, write: if true;
    }
  }
}
