rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users - podem ler todos os usuários (para compatibilidade) e escrever apenas seus próprios dados
    match /users/{userId} {
      // Permite ler qualquer usuário (necessário para mostrar outros usuários compatíveis)
      allow read: if request.auth != null;
      
      // Permite criar documento se o usuário autenticado tem o mesmo UID
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Permite atualizar apenas próprio perfil
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Permite deletar apenas o próprio perfil
      allow delete: if request.auth != null && request.auth.uid == userId;
      
      // Subcoleção de moods
      match /moods/{moodId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Questions - todos podem ler questões, sistema pode criar
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; // Permite criar questões automaticamente
      allow update, delete: if false; // Apenas admin pode modificar/deletar
    }
    
    // Question responses - usuários podem ler/escrever apenas suas próprias respostas
    match /question_responses/{responseId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Mood tracking - usuários podem ler/escrever apenas seus próprios dados de humor
    match /mood_tracking/{trackingId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Conversations - usuários podem acessar apenas conversas que participam
    match /conversations/{conversationId} {
      // Permite criar/ler/atualizar conversas para usuários autenticados
      allow read, write, create, update: if request.auth != null;
      
      match /messages/{messageId} {
        // Permite todas as operações para usuários autenticados (temporariamente)
        allow read, write, create, update: if request.auth != null;
      }
    }
    
    // Notifications - usuários podem ler/escrever apenas suas próprias notificações
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
  }
}
